<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2_1"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn muốn mua gì?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#E33933" />

    <EditText
        android:id="@+id/edtvatpham"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Nhập thứ cần mua"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhấn nút gửi nhà bán hàng báo giá"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="#2A8C82" />

    <Button
        android:id="@+id/btngui"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Gửi"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/thietke"
        app:backgroundTint="@null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Giá sản phẩm là:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#9C27B0" />

    <TextView
        android:id="@+id/txtgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#E40A0A" />
</LinearLayout>